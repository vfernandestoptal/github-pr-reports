{
    "name": "github-pr-reports",
    "version": "1.0.0",
    "description": "Generates statistics related to GitHub repository pull requests",
    "main": "dist/index.js",
    "scripts": {
        "build": "rm -rf dist/ && tsc",
        "build:watch": "tsc -w",
        "prestart": "npm run build",
        "start": "node dist/index.js",
        "lint": "eslint .",
        "test": "ava -v",
        "tdd": "ava --watch -v",
        "test:mocha": "nyc mocha --opts mocha.opts",
        "tdd:mocha": "npm run test:mocha -- --watch --watch-extensions js,ts"
    },
    "nyc": {
        "all": true,
        "require": "ts-node/register",
        "extension": [
            ".ts"
        ],
        "include": [
            "src/**/*"
        ],
        "exclude": [
            "src/**/*.spec.*",
            "**/*.d.ts"
        ],
        "reporter": [
            "lcov",
            "text",
            "text-summary"
        ]
    },
    "author": "",
    "license": "MIT",
    "engines": {
        "node": ">=8.10"
    },
    "dependencies": {
        "async": "2.6.1",
        "bluebird": "3.5.1",
        "config": "1.31.0",
        "dotenv": "6.0.0",
        "github-oauth": "0.2.2",
        "http-close": "0.0.2",
        "moment": "2.22.2",
        "node-github-graphql": "0.2.7",
        "opn": "5.3.0",
        "pad": "2.1.0",
        "winston": "3.0.0"
    },
    "devDependencies": {
        "@types/async": "2.0.49",
        "@types/bluebird": "3.5.23",
        "@types/chai": "^4.1.4",
        "@types/config": "0.0.34",
        "@types/mocha": "^5.2.5",
        "@types/moment": "2.13.0",
        "@types/node": "8.10.21",
        "@types/sinon": "^5.0.1",
        "ava": "0.25.0",
        "babel-cli": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "babel-preset-stage-3": "^6.24.1",
        "chai": "^4.1.2",
        "eslint": "5.2.0",
        "eslint-config-prettier": "2.9.0",
        "eslint-config-recommended": "3.0.0",
        "eslint-plugin-prettier": "2.6.2",
        "mocha": "^5.2.0",
        "nodemon": "1.18.3",
        "nyc": "^12.0.2",
        "prettier": "1.13.7",
        "sinon": "^6.1.4",
        "source-map-support": "^0.5.6",
        "ts-node": "^7.0.0",
        "tslib": "^1.9.3",
        "typescript": "2.9.2",
        "typescript-eslint-parser": "17.0.0"
    },
    "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ]
    }
}
